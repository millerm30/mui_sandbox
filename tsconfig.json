{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "ES2016"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~assets/*": [
        "src/assets/*"
      ],
      "~components/*": [
        "src/components/*"
      ],
      "~/*": [
        "src/*"
      ],
      "~Layout/*": [
        "src/Layout/*"
      ],
      "~containers/*": [
        "src/containers/*"
      ],
      "~contexts/*": [
        "src/contexts/*"
      ],
      "~hooks/*": [
        "src/hooks/*"
      ]
    }
  }
}